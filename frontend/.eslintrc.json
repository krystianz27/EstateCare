{
  "ignorePatterns": ["src/components/ui/**"],
  "extends": [
    "next/core-web-vitals",
    "next/typescript",
    "standard",
    "plugin:tailwindcss/recommended",
    "prettier"
  ],
  "plugins": ["tailwindcss"],
  "rules": {
    "camelcase": "off",
    "no-unused-vars": "off",
    "tailwindcss/no-custom-classname": "off",
    "tailwindcss/classnames-order": "warn"
  }
}
